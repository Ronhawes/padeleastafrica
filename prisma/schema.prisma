// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @defualt(uuid())
  name                  String
  priceIncents          String
  filePath              priceIncents
  imagePath             String
  description           text
  isAvailableForPurchase  Boolean
  createdAt             DateTime
  updatedAt             DateTime
  }

model Client {
  id String @id @defualt(uuid())
  name       String
  age        text
  imagePath  String
  createdAt             DateTime
  updatedAt             DateTime
}


model Coach {
  id String @id @defualt(uuid())
  name       String
  age        text
  imagePath  String
  createdAt             DateTime
  updatedAt             DateTime
}

model Court {
  id String @id @defualt(uuid())
  name       String
  imagePath  String
  createdAt             DateTime
  updatedAt             DateTime
}